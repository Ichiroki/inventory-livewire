{
    "private": true,
    "type": "module",
    "scripts": {
        "dev": "vite",
        "build": "vite build",
        "prettier": "npx prettier --write resources/**/*.blade.php"
    },
    "devDependencies": {
        "@shufo/prettier-plugin-blade": "^1.14.1",
        "@tailwindcss/forms": "^0.5.2",
        "@tailwindcss/typography": "^0.5.0",
        "autoprefixer": "^10.4.18",
        "axios": "^1.6.4",
        "flowbite": "^2.3.0",
        "laravel-vite-plugin": "^1.0.0",
        "postcss": "^8.4.35",
        "prettier": "^3.2.5",
        "tailwindcss": "^3.4.1",
        "vite": "^5.0.0"
    },
    "prettier": {
        "plugins": [
            "@shufo/prettier-plugin-blade"
        ],
        "overrides": [
            {
                "files": [
                    "*.blade.php"
                ],
                "options": {
                    "parser": "blade",
                    "tabWidth": 4
                }
            }
        ]
    }
}
